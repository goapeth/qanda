<div>
  <h2>Update Answer</h2>

  <%= form_with model: [@question,@answer], local: true do |f| %>
  <div class = "form_group">
    <div class = "form_group">
    <label>Name</label>
    <%= f.text_field :name, class: "form_control" %>
    </div>
    <div class = "form_group">
    <label>Content</label>
    <%= f.text_area :content, class: "form_control" %>
    </div>
    <div class = "text_center">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>

</div>
