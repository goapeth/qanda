
<h2>QUESTIONS</h2>

<div class ="row">
  
  <div class ="col-md-12">
    <table class = "table table-striped">
      <thead class="thead-light">
        <tr>
          <th>ID<th>
          <th>TITLE<th>
          <th>MENU<th>
        </tr>
      </thead>
      <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.id %></td>
          <td><%= question.name %></td>
          <td>[edit] [delete]</td>
        </tr>
      <% end %>
      
      </tbody>
    </table>

    

  </div>


</div>
